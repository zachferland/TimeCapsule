{
  "manifest_version": 2,

  "name": "Timecapsule.io",
  "description": "Send articles to the future. Timecapsule is the best way to remember the articles you want to read again",
  "version": "1.0.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

 "permissions": [
    "tabs",
    "cookies",
    "http://localhost:3000/",
    "http://www.diffbot.com/",
    "http://www.timecapsule.io/",
    "http://cdn.mxpnl.com/"
  ],

   "content_security_policy": "script-src 'self' https://cdn.mxpnl.com; object-src 'self'",

  "background": {
    "scripts": ["background.js"]
  }


}

