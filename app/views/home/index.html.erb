<div class="chrome-browser">
	<div class="app">
		<div class="url-box">http://somearticle.com/</div>
    	<div class="extension-icon"></div>
    	<div class="extension">
    		<div class="row">
  			  <div class="label">
  			    <p>Weeks</p>
  			  </div>
  			  <div class="time-val" data-value="7">1</div>
  			  <div class="time-val" data-value="14">2</div>
  			  <div class="time-val" data-value="21">3</div>
  			</div>
  			
  			<div class="row">
  			  <div class="label">
  			    <p>Months</p>
  			  </div>
  			  <div class="time-val" data-value="30">1</div>
  			  <div class="time-val" data-value="90">3</div>
  			  <div class="time-val" data-value="180">6</div>
  			</div>
  			
  			<div class="row">
  			  <div class="label">
  			    <p>Years</p>
  			  </div>
  			  <div class="time-val" data-value="365">1</div>
  			  <div class="time-val" data-value="730">2</div>
  			  <div class="time-val" data-value="1830">5</div>
  			</div>
			
  			<div class="progress">
  			  <div class="loading">
  			  <div class="spinner"><%= image_tag "loader.gif" %></div>
  			    <p>Saving</p>
  			  </div>
			
  			  <div class="saved">
  			    <div class="check"><%= image_tag "check.png" %></div>
  			    <p>Saved</p>
  			  </div>
  			</div>
    	</div>
		<div class="screen">
    	  <div class="article-1">
    	    <%= image_tag "chrome-article.png" %>
    	  </div>
    	  <div class="time">
    	  	<div class="time-box"></div>
    	  </div>

    	  <div class="inbox">
    	  	<%= image_tag "inbox.png" %>
    	  	<div class="the-email"></div>
    	  </div>

    	  <div class="email">
    	  	<%= image_tag "mail.png" %>
    	  	<div class="read-more"></div>
    	  </div>

    	  <div class="final">
    	  	<%= image_tag "chrome-article.png" %>
    	  </div>
				
		</div>
	</div>
</div>











